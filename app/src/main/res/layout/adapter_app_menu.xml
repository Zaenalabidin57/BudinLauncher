<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLines="1"
        android:paddingVertical="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="24dp"
        android:textSize="@dimen/text_medium"
        android:textColor="?attr/primaryColor"
        android:fontFamily="sans-serif-light"
        android:drawableLeft="@android:drawable/sym_def_app_icon"
        android:drawablePadding="8dp"
        android:gravity="end|center_vertical"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/other_profile_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:text="-"
        android:textColor="?attr/primaryColor"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/app_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="1dp"
        android:animateLayoutChanges="true"
        android:background="?attr/primaryShadeDarkColor"
        android:clickable="true"
        android:focusable="true"
        android:gravity="end|center_vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/app_uninstall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:text="Uninstall"
            android:textColor="?attr/primaryColor"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:drawableTop="@android:drawable/ic_menu_delete" />

        <TextView
            android:id="@+id/app_rename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:text="Rename"
            android:textColor="?attr/primaryColor"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:drawableTop="@android:drawable/ic_menu_edit" />

        <TextView
            android:id="@+id/app_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:text="Info"
            android:textColor="?attr/primaryColor"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:drawableTop="@android:drawable/ic_menu_info_details" />

        <TextView
            android:id="@+id/app_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:text="Close"
            android:textColor="?attr/primaryColor"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:drawableTop="@android:drawable/ic_menu_close_clear_cancel" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rename_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:clickable="true"
        android:focusable="true"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="gone">

        <EditText
            android:id="@+id/rename_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="textCapWords"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingVertical="12dp"
            android:textColor="?attr/primaryColor"
            android:textColorHint="?attr/primaryColor"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/save_rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:text="Save"
            android:textColor="?attr/primaryColor"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:drawableTop="@android:drawable/ic_menu_save" />

        <TextView
            android:id="@+id/close_rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:text="Cancel"
            android:textColor="?attr/primaryColor"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:drawableTop="@android:drawable/ic_menu_close_clear_cancel" />
    </LinearLayout>

</FrameLayout>