<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="8dp"
        android:animateLayoutChanges="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fadingEdgeLength="48dp"
        android:overScrollMode="never"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/scrollLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingVertical="64dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/primaryShadeColor"
                android:orientation="vertical"
                android:padding="12dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="@dimen/text_medium"
                        android:textColor="?attr/primaryColor"
                        android:fontFamily="sans-serif-light"
                        android:text="← Settings" />

                </FrameLayout>

            </LinearLayout>

            <!-- Home Screen Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="?attr/primaryShadeColor"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:textSize="@dimen/text_medium"
                    android:textColor="?attr/primaryColor"
                    android:fontFamily="sans-serif-light"
                    android:text="Home Screen" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Apps on Home Screen" />

                    <TextView
                        android:id="@+id/home_apps_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="4dp"
                        android:paddingVertical="8dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="8dp"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:textColor="?attr/primaryColor"
                        tools:text="6" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="App Sorting" />

                    <TextView
                        android:id="@+id/app_sorting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="4dp"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:textColor="?attr/primaryColor"
                        android:text="Alphabetical" />

                </FrameLayout>

            </LinearLayout>

            <!-- Swipe Apps Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="?attr/primaryShadeColor"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:textSize="@dimen/text_medium"
                    android:textColor="?attr/primaryColor"
                    android:fontFamily="sans-serif-light"
                    android:text="Swipe Apps" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Swipe Left App" />

                    <TextView
                        android:id="@+id/swipe_left_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="4dp"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:textColor="?attr/primaryColor"
                        android:text="Camera" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Swipe Right App" />

                    <TextView
                        android:id="@+id/swipe_right_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="4dp"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:textColor="?attr/primaryColor"
                        android:text="Phone" />

                </FrameLayout>

            </LinearLayout>

            <!-- Appearance Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="?attr/primaryShadeColor"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:textSize="@dimen/text_medium"
                    android:textColor="?attr/primaryColor"
                    android:fontFamily="sans-serif-light"
                    android:text="Appearance" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Auto-show Keyboard" />

                    <TextView
                        android:id="@+id/keyboard_auto_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="4dp"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:textColor="?attr/primaryColor"
                        android:text="Off" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Text Size" />

                    <TextView
                        android:id="@+id/text_size_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="4dp"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:textColor="?attr/primaryColor"
                        android:text="4" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="App Alignment" />

                    <TextView
                        android:id="@+id/alignment_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="4dp"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:textColor="?attr/primaryColor"
                        android:text="Left" />

                </FrameLayout>

                <!-- Alignment layout -->
                <LinearLayout
                    android:id="@+id/alignment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/rounded_primary_gradient"
                    android:elevation="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/alignment_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Left" />

                    <TextView
                        android:id="@+id/alignment_center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Center" />

                    <TextView
                        android:id="@+id/alignment_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Right" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Theme" />

                    <TextView
                        android:id="@+id/theme_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="4dp"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:textColor="?attr/primaryColor"
                        android:text="Dark" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/reset_app_names"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Reset Custom App Names" />

                </FrameLayout>

                <!-- Theme layout -->
                <LinearLayout
                    android:id="@+id/theme_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/rounded_primary_gradient"
                    android:elevation="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/theme_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Light" />

                    <TextView
                        android:id="@+id/theme_dark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Dark" />

                    <TextView
                        android:id="@+id/theme_system"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="System" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Show App Icons" />

                    <TextView
                        android:id="@+id/show_app_icons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="4dp"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:textColor="?attr/primaryColor"
                        android:text="On" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Thick Text" />

                    <TextView
                        android:id="@+id/thick_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="4dp"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:textColor="?attr/primaryColor"
                        android:text="Off" />

                </FrameLayout>

                <!-- Text sizes layout -->
                <LinearLayout
                    android:id="@+id/text_sizes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_size_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="12dp"
                            android:textSize="@dimen/text_small"
                            android:textColor="?attr/primaryColor"
                            android:text="1" />

                        <TextView
                            android:id="@+id/text_size_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="12dp"
                            android:textSize="@dimen/text_small"
                            android:textColor="?attr/primaryColor"
                            android:text="2" />

                        <TextView
                            android:id="@+id/text_size_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="12dp"
                            android:textSize="@dimen/text_medium"
                            android:textColor="?attr/primaryColor"
                            android:text="3" />

                        <TextView
                            android:id="@+id/text_size_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="12dp"
                            android:textSize="@dimen/text_medium"
                            android:textColor="?attr/primaryColor"
                            android:text="4" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_size_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="12dp"
                            android:textSize="@dimen/text_medium"
                            android:textColor="?attr/primaryColor"
                            android:text="5" />

                        <TextView
                            android:id="@+id/text_size_6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="12dp"
                            android:textSize="@dimen/text_medium"
                            android:textColor="?attr/primaryColor"
                            android:text="6" />

                        <TextView
                            android:id="@+id/text_size_7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="12dp"
                            android:textSize="@dimen/text_medium"
                            android:textColor="?attr/primaryColor"
                            android:text="7" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Screen Time Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="?attr/primaryShadeColor"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:textSize="@dimen/text_medium"
                    android:textColor="?attr/primaryColor"
                    android:fontFamily="sans-serif-light"
                    android:text="Screen Time" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:animateLayoutChanges="true"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/text_small"
                        android:textColor="?attr/primaryColor"
                        android:text="Enable Screen Time" />

                    <TextView
                        android:id="@+id/screen_time_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="4dp"
                        android:padding="8dp"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:textColor="?attr/primaryColor"
                        android:text="Off" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- App List Layout -->
    <LinearLayout
        android:id="@+id/app_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/back_button_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/text_medium"
            android:textColor="?attr/primaryColor"
            android:fontFamily="sans-serif-light"
            android:text="← Select App" />

        <ListView
            android:id="@+id/settings_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:divider="@null"
            android:dividerHeight="0dp" />

    </LinearLayout>

</FrameLayout>